{
  "name": "ngx-ui-loader",
  "description": "An all-in-one and fully customizable loader/spinner for Angular applications. It supports foreground, background spinner/loader, indicative progress bar and multiple loaders.",
  "version": "14.0.0",
  "scripts": {
    "build": "../../node_modules/.bin/tsc -p tsconfig.schematics.json",
    "copy:collections": "cp schematics/*collection.json ../../dist/ngx-ui-loader/schematics/",
    "postbuild": "npm run copy:collections"
  },
  "schematics": "./schematics/collection.json",
  "ng-save": {
    "save": "dependencies"
  },
  "ng-update": {
    "migrations": "./schematics/migration-collection.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t-ho/ngx-ui-loader.git"
  },
  "author": "t-ho <t.ho@tdev.app>",
  "homepage": "https://tdev.app/ngx-ui-loader/demo",
  "license": "MIT",
  "private": false,
  "peerDependencies": {
    "@angular/common": ">=14.0.0",
    "@angular/core": ">=14.0.0"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "keywords": [
    "ngx-ui-loader",
    "ngx-loader",
    "ngx-loading",
    "ngx-multiple-loader",
    "ngx-multiloader",
    "loader",
    "loading",
    "spinner",
    "ngx-spinner",
    "progressbar",
    "progress bar",
    "loader AoT compatible",
    "Angular loader",
    "Angular loading",
    "Angular multiple loaders",
    "Angular spinner",
    "Angular progress bar"
  ]
}
